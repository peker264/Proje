<script type="text/javascript">
    $(document).ready(function() {
        $('#ajaxdata').dataTable({
            "ajax": {
                "url": '@Url.Action("GetOffers","Basket")',
                dataSrc:""
            },
            "columns": [
                {
                    "data": "ID",
                    "title": "#Id"
                },
                {
                    "data": null,
                    "title":"Reference No",
                    "render": function ( data, type, full, meta ) {
                        return "<a href=\"/Basket/OfferDetail/"+full.ID+"\">"+full.ReferenceNo+"</a>";
                    }
                },
                {
                    "data": "Exp1",
                    "title": "Expl. 1"
                }, {
                    "data": "Exp2",
                    "title": "Expl. 2"
                },
                {
                    "data": "Date",
                    "type": "date ",
                    "title": "Date",
                    "render" :function (value) {
                        if (value === null) return "";

                        var pattern = /Date\(([^)]+)\)/;
                        var results = pattern.exec(value);
                        var dt = new Date(parseFloat(results[1]));

                        return (dt.getDate()) + "/" + dt.getMonth() + "/" + dt.getFullYear();}

                }
            ]
        });
    });

